class Solution {
public:
bool pal(string &s,int l,int r){
        while(l<r){
            if(s[l]!=s[r]){return false;}
            l++,r--;
        }return true;
}
    string longestPalindrome(string s) {
        int start;
        int maxlen=0;
        for(int i=0;i<s.size();i++){
            for(int j=i;j<s.size();j++){
                if(pal(s,i,j)){
                    if(j-i+1>maxlen){
                    maxlen=j-i+1;
                    start=i;}
                }
            }
        } 
        return s.substr(start,maxlen);
    }
};
