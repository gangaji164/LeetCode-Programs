class Solution {
public:
    string licenseKeyFormatting(string s, int k) {
        string clean="";
        for(int i=0;i<s.size();i++){
            if(s[i]!='-'){
                clean+=toupper(s[i]);
            }
        }
        if(clean.empty()){
            return "";
        }
        string result="";
        int n=clean.size();
        int first=n%k;
        int count=0;

        for(int i=0;i<first;i++){
            result+=clean[i];
        }

        if(first>0 && first<n){
            result+="-";
            
        }
        for(int i=first;i<n;i++){
            result+=clean[i];
            count++;
                   

        if(count==k && i<n-1){
            result+="-";
            count=0;
        }}
        return result;
    }
};
