class Solution {
public:
    int isPrefixOfWord(string sentence, string searchWord) {
        int n=sentence.size();
        int wi=1;
        for(int i=0;i<n;i++){
            if(i==0||sentence[i-1]==' '){
                bool ispre=true;
            
            for(int j=0;j<searchWord.size();j++){
                if(i+j>=n||sentence[i+j]!=searchWord[j]){
                    ispre=false;
                    break;
                }}
            
            if(ispre) return wi;
            wi++;}
        }
        return-1;
    }
};
