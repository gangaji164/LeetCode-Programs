class Solution {
public:
    long long minimumSteps(string s) {
        long long black=0,swaps=0;
        for(int i=0;i<s.size();i++){
            char c=s[i];
            if(c=='1'){
                black++;
            }
            else{
                swaps+=black;
            }
        }
        return swaps;
    }
};
