class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
       
        int n=nums.size();
        int count=1;
        int k=1;
        if(n<=2) return n;
        for(int i=1;i<n;i++){
            if(nums[i]==nums[i-1]){
                count++;
            }
            else{
                count=1;
            }
            if(count<=2){
                nums[k]=nums[i];
                k++;
            }
        }
        return k;
    }
};
