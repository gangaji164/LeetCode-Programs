class Solution {
public:
    int findLHS(vector<int>& nums) {
        sort(nums.begin(),nums.end());
        int l=0,r=0;
        int res=0;
        while(r<nums.size()){
            while(nums[r]-nums[l]>1){
                l++;
            }
            if(nums[r]-nums[l]==1){
                res=max(res,r-l+1);
            }
            r++;
        }
        return res;
    }
};
