class Solution {
public:
    double minimumAverage(vector<int>& nums) {
        sort(nums.begin(),nums.end());
        int n=nums.size();
        double ans=1e18;

        for(int i=0;i<n/2;i++){
            double avg=(nums[i]+nums[n-1-i])/2.0;
            ans=min(ans,avg);
        }
        return ans;
    }
};
