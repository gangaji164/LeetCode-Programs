class Solution {
public:
    vector<int> twoSum(vector<int>& numbers, int target) {
        int left=0,right=numbers.size()-1;
        int sum=0;
        while(left<right){
     sum=numbers[left]+numbers[right];
            if(sum==target){
               return{ left=left+1,
                right=right+1};
            }
            else if(sum<target){
                left++;
            }
            else{
                right--;
            }
        }
        return {};

    }
};
